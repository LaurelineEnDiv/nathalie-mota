{
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/css"
        }
    ],
    "liveSassCompile.settings.excludeList": [
        "**/node_modules/**",
        ".vscode/**"
    ],
    "liveSassCompile.settings.generateMap": true, // Génère une source map pour le debug
    "liveSassCompile.settings.autoprefix": true   // Ajoute automatiquement les préfixes CSS
}
